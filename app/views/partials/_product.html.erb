<div class="thumbnail">
  <a href="<%= san_pham_short_path(en_url(product.name)) %>">
    <%= image_tag product.image.url(:medium) %>
  </a>
  <div class="caption">
    <h3><%= product.name %></h3>
    <p class="price"><%= get_price(product.price) %></p>
    <p><%= product.description.html_safe %></p>
    <p><a href="<%= san_pham_short_path(en_url(product.name)) %>" class="btn btn-success" role="button">Xem</a></p>
  </div>
</div>

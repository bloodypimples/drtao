<div class="container signin">

  <% flash.each do |key, value| %>
    <div class="alert alert-danger" id="<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= simple_form_for :user, url: signin_path, html: { class: 'form-signin' } do |f| %>
    <h2 class="form-signin-heading">Sign in</h2>
    <%= f.input :email, placeholder: "Email address", required: true, autofocus: true, input_html: { class: "form-control" } %>
    <%= f.input :password, placeholder: "Password", required: true, input_html: { class: "form-control" } %>
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

</div> <!-- /container -->
